<!DOCTYPE html>
<html lang="zh-Hant-TW">
  <head>
    <%- include("./partials/head")%>
  </head>
  <body>
    <div class="container">
      <table class="mt-3 table table-striped">
        <thead>
          <tr class="table-primary">
            <th class="col-1">id</th>
            <th class="col-2">產品名</th>
            <th class="col-4">描述</th>
            <th class="col-1">價格</th>
            <th class="col-2">狀態</th>
            <th class="col-2">管理</th>
          </tr>
        </thead>
        <tbody>
          <% for(let p of data){ %>
          <tr>
            <td><%-p.p_id %></td>
            <td><%-p.product_name %></td>
            <td><%-p.desc %></td>
            <td><%-p.price %></td>
            <td>
              <%-p.on_offer?`<span class="text-primary">供應中</span>`:`<span
                class="text-warning"
                >停止供應</span
              >` %>
            </td>
            <td>
              <a
                href="./product?p_id=<%=p.p_id%>"
                class="btn btn-sm btn-primary me-1"
                >編輯</a
              ><button class="btn btn-sm btn-danger">刪除</button>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <nav aria-label="product list pagination">
        <ul class="pagination justify-content-center">
          <%for(let i =1 ;i<=totalPage;i++) {%> <%-page!=i? `
          <li class="page-item">
            <a class="page-link" href="./productList?page=${i}">${i}</a>
          </li>
          ` : `
          <li class="page-item active" aria-current="page">
            <p class="page-link">${i}</p>
          </li>
          ` %> <%}%>
        </ul>
      </nav>
    </div>
    <%- include("./partials/script")%>
  </body>
</html>
